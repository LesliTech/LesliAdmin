
<%= render(LesliView::Layout::Container.new("")) do %>

    <%= render(LesliView::Components::Header.new("Account information")) %>

    <%= render LesliView::Elements::Tabs.new(active_tab: 1) do |tabs| %>

        <% tabs.with_tab(title: "General Information", icon: "business") do  %>
            <%= form_with(model: @account, builder: LesliView::Forms::Builder) do |form| %>
                <%= form.field(:name, label: "Company name")%>
                <%= form.field(:email) %>
                <%= form.button "Save Account" %>
            <% end %>
        <% end %>
    <% end %>
<% end %>
